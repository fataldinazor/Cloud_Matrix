<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Log-in</title>
    <link rel="stylesheet" href="/output.css">
  </head>
  <body class="bg-gray-100 h-screen flex flex-col">
    <%- include('header.ejs') %>

    <div
      class="w-full max-w-md bg-white p-10 rounded-lg shadow-lg mx-auto my-auto border border-gray-200"
    >
      <h2 class="text-3xl font-extrabold mb-4 text-center text-gray-800">
        Log-in
      </h2>
      <p class="text-center text-gray-600">
        Don't have an account?
        <a href="/sign-up" class="text-blue-500 hover:underline">Sign-up</a>
      </p>

      <% if(errors && errors.length > 0) { %>
      <ul class="bg-red-100 text-red-600 p-4 rounded mb-4">
        <% errors.forEach(error => { %>
        <li><%= error %></li>
        <% }) %>
      </ul>
      <% } %>

      <form action="/log-in" method="POST" class="space-y-6">
        <div>
          <label
            for="username"
            class="block text-sm font-medium text-gray-700 mb-1"
            >Username</label
          >
          <input
            type="text"
            id="username"
            name="username"
            placeholder="Enter your username"
            class="w-full px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-400 focus:border-blue-400 transition duration-200"
            required
          />
        </div>

        <div>
          <label
            for="password"
            class="block text-sm font-medium text-gray-700 mb-1"
            >Password</label
          >
          <input
            type="password"
            id="password"
            name="password"
            placeholder="Enter your password"
            class="w-full px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-400 focus:border-blue-400 transition duration-200"
            required
          />
        </div>

        <button
          type="submit"
          class="w-full bg-blue-600 text-white font-semibold py-3 rounded-md shadow-md hover:bg-blue-700 transition duration-300"
        >
          Submit
        </button>
      </form>
    </div>
  </body>
</html>
